<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_photo"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/font"
        android:layout_width="335dp"
        android:layout_height="58dp"
        android:layout_marginTop="300dp"
        android:layout_marginBottom="52dp"
        android:background="@drawable/circle_one"
        android:contentDescription="@string/todo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createBT" />

    <ImageButton
        android:id="@+id/createBT"
        android:layout_width="194dp"
        android:layout_height="188dp"
        android:layout_marginTop="160dp"
        android:background="@drawable/never"
        android:contentDescription="@string/todo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="162dp"
        android:layout_height="62dp"
        android:gravity="center"
        android:text="@string/create_new"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/createBT"
        app:layout_constraintEnd_toEndOf="@+id/createBT"
        app:layout_constraintStart_toStartOf="@+id/createBT"
        app:layout_constraintTop_toTopOf="@+id/createBT" />

    <ImageButton
        android:id="@+id/plusBT"
        android:layout_width="59dp"
        android:layout_height="61dp"
        android:layout_marginStart="280dp"
        android:layout_marginTop="296dp"
        android:layout_marginBottom="49dp"
        android:background="@drawable/button_never"
        android:contentDescription="@string/todo"
        android:src="@drawable/plus"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/font"
        app:layout_constraintTop_toBottomOf="@+id/createBT" />

    <TextView
        android:id="@+id/tvPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:textColor="@color/new_color"
        android:textSize="33sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/plusBT"
        app:layout_constraintStart_toEndOf="@id/minusBT"
        tools:text="@string/_1" />

    <ImageButton
        android:id="@+id/minusBT"
        android:layout_width="59dp"
        android:layout_height="61dp"
        android:layout_marginTop="296dp"
        android:layout_marginEnd="288dp"
        android:layout_marginBottom="49dp"
        android:background="@drawable/button_never"
        android:contentDescription="@string/todo"
        android:src="@drawable/minus"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/font"
        app:layout_constraintTop_toBottomOf="@+id/createBT" />

</androidx.constraintlayout.widget.ConstraintLayout>



